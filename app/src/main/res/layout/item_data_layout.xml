<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

        <ImageView
                android:id="@+id/item_data_layout_imageView_delete"
                android:src="@drawable/ic_delete_black_24dp"
                android:clickable="true"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

    </LinearLayout>
    <TextView
            android:id="@+id/item_data_layout_textView_title"
            android:hint="Title"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />


    <TextView
            android:hint="URL"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_data_layout_textView_url"

    />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/actual_price_text"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:id="@+id/item_data_layout_textView_actual_price_text"
        />

        <TextView
                android:id="@+id/item_data_layout_textView_price"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:hint="Price"
        />

    </LinearLayout>

    <ImageView
            android:id="@+id/item_data_layout_imageView_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_icon"
    />


</LinearLayout>