<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tv_frame"
        >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/item_data_layout_imageView_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:src="@drawable/ic_clear_black_24dp" />

    </LinearLayout>




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <ImageView
                android:id="@+id/item_data_layout_imageView_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75" />

        <TextView
                android:id="@+id/item_data_layout_textView_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:hint="Title"
                android:textSize="21sp" />


    </LinearLayout>

    <TextView
            android:id="@+id/item_data_layout_textView_price"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="Price"
            android:textSize="21sp" />

</LinearLayout>